<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netcoreapp1.1</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.3.0" />
    <PackageReference Include="Moq" Version="4.7.10" />
    <PackageReference Include="xunit" Version="2.2.0" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dashing\Dashing.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
  
  <UsingTask TaskName="Dashing.CodeGeneration.Weaving.Task.GetConfig" AssemblyFile=".\$(OutputPath)\Dashing.dll"/>
  <Target Name="Dashing Weave" AfterTargets="Build">
	<Message Importance="high" Text="$(MSBuildThisFileDirectory)$(OutputPath)Dashing.Tests.dll" />
	<GetConfig ConfigurationFullName="Dashing.Tools.Tests.CustomConfig" ConfigurationAssemblyPath="$(MSBuildThisFileDirectory)$(OutputPath)Dashing.Tests.dll">
		<Output TaskParameter="Configuration" PropertyName="ConfigurationJson" />
	</GetConfig>
	<Message Text="$(ConfigurationJson)" />
  </Target>

</Project>
